@inherits LayoutComponentBase

<PageTitle>Gestão de Concursos</PageTitle>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()" style="background-color: #28a745;">
    <nav class="flex-column">
        <!-- Home -->
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="/" Match="NavLinkMatch.All" style="color: #fff;">
                <span class="bi bi-house-door-fill me-2 icon-adjust" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <!-- Inscrever Candidato -->
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="/cadastrarCandidato" style="color: #fff;">
                <span class="bi bi-person-plus me-2 icon-adjust" aria-hidden="true"></span> Inscrever Candidato
            </NavLink>
        </div>

        <!-- Cadastrar Concurso -->
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="/cadastrarConcurso" style="color: #fff;">
                <span class="bi bi-trophy me-2 icon-adjust" aria-hidden="true"></span> Cadastrar Concurso
            </NavLink>
        </div>

        <!-- Cadastrar Disciplinas -->
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="/cadastrarDisciplina" style="color: #fff;">
                <span class="bi bi-book me-2 icon-adjust" aria-hidden="true"></span> Cadastrar Disciplinas
            </NavLink>
        </div>

        <!-- Lançar Notas -->
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="/lancarNotas" style="color: #fff;">
                <span class="bi bi-pencil-square me-2 icon-adjust" aria-hidden="true"></span> Lançar Notas
            </NavLink>
        </div>

        <!-- Consultar Inscrições -->
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="/consultarInscricoes" style="color: #fff;">
                <span class="bi bi-search me-2 icon-adjust" aria-hidden="true"></span> Consultar Inscrições
            </NavLink>
        </div>

        <!-- Consultar Notas -->
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="/consultarNotas" style="color: #fff;">
                <span class="bi bi-clipboard-data me-2 icon-adjust" aria-hidden="true"></span> Consultar Notas
            </NavLink>
        </div>

        <!-- Lista de Aprovados -->
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="/listarAprovados" style="color: #fff;">
                <span class="bi bi-award me-2 icon-adjust" aria-hidden="true"></span> Lista de Aprovados
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
